rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /pets/{petId} {
      allow read: if true;                    // ✅ All users can read pets
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;  // ✅ Authenticated users can create pets (must set their own userId)
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;  // ✅ Only owner can edit/delete
    }
    match /reminders/{reminderId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
    match /activities/{activityId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
  }
}